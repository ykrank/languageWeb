<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:id="@+id/video_TopBar"
        android:background="@drawable/video_topbar"
        android:layout_alignParentTop="true"
        android:visibility="gone">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/vedio_title"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:id="@+id/video_BottomBar"
        android:background="@drawable/video_bottombar"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />

    <Button 
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:id="@+id/video_CloseBtn"
        android:background="@drawable/video_close"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        />

    <Button 
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:id="@+id/video_ResumeBtn"
        android:background="@drawable/video_play"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />

    <Button 
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:id="@+id/video_PauseBtn"
        android:background="@drawable/video_pause"
        android:layout_toRightOf="@+id/video_ResumeBtn"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />

    <Button 
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:id="@+id/video_StopBtn"
        android:background="@drawable/video_stop"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />
</RelativeLayout>
