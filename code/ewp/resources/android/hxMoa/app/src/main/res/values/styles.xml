<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="dialogWindowLeft" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_left_center</item>
    </style>

    <style name="dialogWindowLeftOut" mce_bogus="1" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/dialog_left_out</item>
    </style>

    <style name="dialogWindowRight" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_right_center</item>
    </style>

    <style name="dialogWindowRightOut" mce_bogus="1" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/dialog_right_out</item>
    </style>

    <style name="dialogWindowUp" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_up_center</item>
    </style>

    <style name="dialogWindowUpOut" mce_bogus="1" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/dialog_up_out</item>
    </style>

    <style name="dialogWindowDown" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_down_center</item>
    </style>

    <style name="dialogWindowDownOut" mce_bogus="1" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/dialog_down_out</item>
    </style>
    
    <!-- EMP GUIWindow 使用 -->
	<style name="dialogWindow" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> 
		<item name="android:windowIsFloating">true</item> 
		<item name="android:windowIsTranslucent">false</item> 
		<item name="android:windowNoTitle">true</item>
		<item name="android:background">@null</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>

    <!-- 半透明 -->
    <style name="TransparentFullscreen" parent="@android:style/Theme.Translucent">
        <item name="android:windowFullscreen">true</item>          
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:colorForeground">#fff</item>       
    </style>

    
    <!-- 以下是config.xml页面所使用样式  -->
    <style name="Config_IPBtn" >
        <item name="android:layout_width">fill_parent</item>          
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>     
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">#FF66FF</item>    
    </style>
    
    <style name="Config_TogBtn">
        <item name="android:layout_width">50dp</item>          
        <item name="android:layout_height">25dp</item>
        <item name="android:textOff"></item>     
        <item name="android:textOn"></item>
        <item name="android:background">@drawable/config_togbtn_selector</item>   
    </style>
     <!-- Dialog样式 -->
    <style name="dialogselect" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
        <style name="fill_wrap_1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dip45</item>
    </style>
    
    <style name="img_line_style">
        <item name="android:background">@drawable/line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dip_half1</item>
    </style>
    
     <style name="fill_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
     <style name="wrap_fill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="back_finish">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <!-- Dialog样式 -->
</resources>